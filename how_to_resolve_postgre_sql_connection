1. wget http://public-yum.oracle.com/RPM-GPG-KEY-oracle-ol7

2. gpg --quiet --with-fingerprint ./RPM-GPG-KEY-oracle-0l7

3. rpm --import ./RPM-GPG-KEY-oracle-ol7

4. sudo yum -y install php56-pgsql

5. sudo service httpd restart

6. php -r 'echo phpinfo();'




